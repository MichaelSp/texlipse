   <extension
         point="org.eclipse.ui.editors.templates">
      <contextType
            class="net.sourceforge.texlipse.templates.TexContextType"
            id="net.sourceforge.texlipse.templates.tex"/>
		<template
        contextTypeId="net.sourceforge.texlipse.templates.tex"
        icon="icons/template.gif"
        description="Template for a list (description)"
        name="description"
        id="net.sourceforge.texlipse.templates.tex.description">
       	<pattern>
\begin{description}
  \item[${item}] ${cursor}
\end{description}
        </pattern>
        </template>
		<template
        contextTypeId="net.sourceforge.texlipse.templates.tex"
        icon="icons/template.gif"
        description="Template for a list (enumerate)"
        name="enumerate"
        id="net.sourceforge.texlipse.templates.tex.enumerate">
       	<pattern>
\begin{enumerate}
  \item ${cursor}
\end{enumerate}
        </pattern>
        </template>
		<template
        contextTypeId="net.sourceforge.texlipse.templates.tex"
        icon="icons/template.gif"
        description="Template for a list (itemize)"
        name="itemize"
        id="net.sourceforge.texlipse.templates.tex.itemize">
       	<pattern>
\begin{itemize}
  \item ${cursor}
\end{itemize}
        </pattern>
        </template>
		<template
        contextTypeId="net.sourceforge.texlipse.templates.tex"
        icon="icons/template.gif"
        description="Template for a table"
        name="table"
        id="net.sourceforge.texlipse.templates.tex.table">
		<pattern>
\begin{table}
\begin{tabular}{${columns}}
${cursor}
\end{tabular}
\caption{${tablecaption}}
\label{${tablelabel}}
\end{table}
		</pattern>
		</template>
		<template
        contextTypeId="net.sourceforge.texlipse.templates.tex"
        icon="icons/template.gif"
        description="Begin/end pattern"
        name="begin"
        id="net.sourceforge.texlipse.templates.tex.begin">
		<pattern>
\begin{${environment}} ${cursor}
\end{${environment}}
		</pattern>
		</template>
		<template
        contextTypeId="net.sourceforge.texlipse.templates.tex"
        icon="icons/template.gif"
        description="Template for Figure"
        name="figure"
        id="net.sourceforge.texlipse.templates.tex.figure">
		<pattern>
%%\usepackage{graphics} is needed for \includegraphics
\begin{figure}[htp]
\begin{center}
  \includegraphics[width=${figureWidth}]{${filename}}
  \caption[${labelInTOC}]{${figureCaption}}
  \label{${figureLabel}}
\end{center}
\end{figure}
		</pattern>
		</template>
		
      <contextType
            class="net.sourceforge.texlipse.templates.TexContextType"
            id="net.sourceforge.texlipse.templates.math"/>
		<template
        contextTypeId="net.sourceforge.texlipse.templates.math"
        icon="icons/template.gif"
        description="Big square bracket"
        name="sqbr"
        id="net.sourceforge.texlipse.templates.tex.sqbr">
		<pattern>
\left[ ${formula} \right] ${cursor}
		</pattern>
		</template>
		<template
        contextTypeId="net.sourceforge.texlipse.templates.math"
        icon="icons/template.gif"
        description="Big braces"
        name="braces"
        id="net.sourceforge.texlipse.templates.tex.braces">
		<pattern>
\left\{ ${formula} \right\} ${cursor}
		</pattern>
		</template>
		
		
		
