<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="net.sourceforge.texlipse"
   name="TeXlipse Plug-in"
   version="1.0.5"
   provider-name="TeXlapse Team"
   class="net.sourceforge.texlipse.TexlipsePlugin">

   <runtime>
      <library name="texlipse.jar">
         <export name="*"/>
      </library>
   </runtime>

   <requires>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.ui.editors"/>
      <import plugin="org.eclipse.ui.workbench.texteditor"/>
      <import plugin="org.eclipse.core.resources"/>
      <import plugin="org.eclipse.ui.views"/>
      <import plugin="org.eclipse.jface.text"/>
      <import plugin="org.eclipse.ui.ide"/>
      <import plugin="org.eclipse.ui.forms"/>
      <import plugin="org.eclipse.help"/>
      <import plugin="org.eclipse.debug.core"/>
      <import plugin="org.eclipse.debug.ui"/>
      <import plugin="org.eclipse.ui.console"/>
   </requires>

   <extension
         point="org.eclipse.ui.editorActions">
      <editorContribution
            id="net.sourceforge.texlipse.editorContribution"
            targetID="net.sourceforge.texlipse.TexEditor">
                     <menu
               label="&amp;Latex"
               id="LatexMenu">
            <separator
                  name="latexGroup">
            </separator>
            <separator name="sourceGroup"/>
         </menu>
         <action
               toolbarPath="latexGroup"
               label="&amp;Word Count"
               definitionId="actions.WordCountAction"
               tooltip="Word Count"
               icon="icons/wordcount.gif"
               class="net.sourceforge.texlipse.actions.WordCountAction"
               style="push"
               menubarPath="LatexMenu/sourceGroup"
               id="actions.WordCountAction"/>
         <action
               toolbarPath="latexGroup"
               label="Pre&amp;view Document"
               definitionId="actions.PreviewAction"
               icon="icons/preview.gif"
               class="net.sourceforge.texlipse.actions.PreviewAction"
               tooltip="Launch the previewer"
               style="push"
               menubarPath="LatexMenu/sourceGroup"
               id="actions.PreviewAction"/>
            </editorContribution>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="net.sourceforge.texlipse.editor.TexEditor"
            icon="icons/texfile.gif"
            default="true"
            contributorClass="net.sourceforge.texlipse.editor.TexEditorActionContributor"
            name="Latex Editor"
            id="net.sourceforge.texlipse.TexEditor"
            extensions="tex,ltx,sty"/>
      <editor
            class="net.sourceforge.texlipse.bibeditor.BibEditor"
            icon="icons/bibfile.gif"
            contributorClass="org.eclipse.ui.editors.text.TextEditorActionContributor"
            name="BibTeX Editor"
            id="net.sourceforge.texlipse.bibeditor.BibEditor"
            extensions="bib"/>
   </extension>
   <extension
         id="builder.TexlipseBuilder"
         name="Latex Builder"
         point="org.eclipse.core.resources.builders">
      <builder >
         <run class="net.sourceforge.texlipse.builder.TexlipseBuilder"/>
      </builder>
   </extension>
   <extension
         id="builder.TexlipseNature"
         name="Latex Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run class="net.sourceforge.texlipse.builder.TexlipseNature"/>
      </runtime>
   </extension>
   <extension
         id="properties.projectNatureImage1"
         name="Latex Nature"
         point="org.eclipse.ui.ide.projectNatureImages">
      <image
            natureId="net.sourceforge.texlipse.builder.TexlipseNature"
            icon="icons/texnature.gif"
            id="net.sourceforge.texlipse.ui.projectNatureImage"/>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            class="net.sourceforge.texlipse.wizards.TexlipseProjectCreationWizard"
            icon="icons/logo.gif"
            category="texlipse.category1"
            project="true"
            name="New Latex Project"
            id="texlipse.wizard1"/>
      <category
            name="Texlipse"
            id="texlipse.category1"/>
   </extension>
   <extension
         id="properties.propertyPage1"
         name="Latex Properties Page"
         point="org.eclipse.ui.propertyPages">
      <page
            objectClass="org.eclipse.core.resources.IProject"
            class="net.sourceforge.texlipse.properties.TexlipseProjectPropertyPage"
            nameFilter="*"
            name="Latex Project Properties"
            id="properties.TexlipseProjectPropertyPage">
         <filter
               value="net.sourceforge.texlipse.builder.TexlipseNature"
               name="projectNature"/>
      </page>
   </extension>
