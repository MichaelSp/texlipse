            category="TeXlipse"
            name="LaTeX Table View"
            id="Texlipse.view1"/>
      <view
            icon="icons/outline_co.gif"
            class="net.sourceforge.texlipse.treeview.views.TexOutlineTreeView"
            category="TeXlipse"
            name="Full Latex Outline"
            id="Texlipse.view2"/>
